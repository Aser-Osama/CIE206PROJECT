@page
@model CIE206PROJECT.Pages.Course_pages.Student_overviewModel
@{
}
<div class="container-sm">


<section class="profile mt-4">

  <div class="row justify-content-center mb-2 g-2 h-10 d-flex">

    <div class=" col-4 col-sm-5  col-xl-3 col-md-4 col-lg-3 col-xxl-2">
      <div class="card  h-100 p-4 text-center d-block flex-column align-self-stretch">

        <div class="card-body justify-content-center d-flex flex-column">
          <img src="https://www.tutorialspoint.com/bootstrap/images/64.jpg"
            class=" mx-auto align-self-center rounded-circle" width="64">
          <div class="card-title m-2 h6">User Name <span class="badge bg-primary rounded-pill">student</span> </div>
          <div class="card-text text-muted">
            STudent level
            <br>
            parent name
          </div>
        </div>
      </div>

    </div>

    <div class="col-md-8 col-lg-9 col-xl-6 col-xxl-7">
      <div class="card h-100 user-information align-self-stretch p-4">
        <div class="card-title h5 text-center">User Information</div>
        <div class="card-body">
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-2">Email</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0">example@example.com</p>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-2">Phone Numbers</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0">(097) 234-5678 </p>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-3">
              <p class="mb-1">Address</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0">Bay Area, San Francisco, CA</p>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-1">Join date</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0">Janurary 2092</p>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-1">Birthday</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0">febuary 2021</p>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>
  <div class="row mb-2 justify-content-center">
    <div class="col-12 col-sm-12 col-md-12 col-xl-9 col-xxl-9 col-lg-12">
      <div class="card h-100 p-4">
        <div class="card-title h5 text-center">Teacher Note</div>
        <div class="card-body">
          <form class="d-flex">
            <div class="col-6 me-3">
              <div class="mb-3">
                <label for="note-subject" class="form-label">Subject</label>
                <input type="text" class="form-control" id="note-subject" placeholder="Enter note subject">
              </div>
              <div class="mb-3">
                <label for="note-datetime" class="form-label">Date and Time</label>
                <input type="datetime-local" class="form-control" id="note-datetime">
              </div>
              <button type="submit" class="btn btn-primary">Submit Note</button>
            </div>
            <div class="col-6">
              <div class="mb-3">
                <label for="note-content" class="form-label">Note Content</label>
                <textarea class="form-control" id="note-content" rows="4" placeholder="Enter note content"></textarea>
              </div>
            </div>

          </form>
        </div>
      </div>

    </div>
  </div>



  <div class="row g-2 justify-content-center d-flex">
    <div class="col-lg-12 col-xl-9 col-xxl-9 col-md-12">
      <div class="card">
        <ul class="nav nav-tabs mb-3" id="evaluationTabs" role="tablist">
          @for (int i = 0; 4 > i; i++)
          {
            <li class="nav-item" role="presentation">
              <button class="nav-link " id="tab-@i" data-bs-toggle="tab" data-bs-target="#content-@i" type="button"
                role="tab" aria-controls="content-@i" aria-selected="true">Course @i </button>
            </li>
          }
          <!-- Add more tabs as needed -->


        </ul>
        <div class="card-body p-4">
          <div class="tab-content" id="evaluationContent">

            @for (int i = 0; 4 > i; i++)
            {
              string activeClass = i == 0 ? "show active" : string.Empty;

              <div class="tab-pane fade @activeClass" id="content-@i" role="tabpanel" aria-labelledby="tab-@i">
                <div class="card-title text-center h5">Trainer Evaluation - Tab @i</div>
                <div class="card-body">

                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <p class="text-center h6 mt-2">Criteria 1</p>
                      <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 75%;" valuenow="75" aria-valuemin="0"
                          aria-valuemax="100"></div>
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <p class="text-center h6 mt-2">Criteria 2</p>
                      <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="50"
                          aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <p class="text-center h6 mt-2">Criteria 3</p>
                      <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25"
                          aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <p class="text-center h6 mt-2">Criteria 4</p>
                      <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100"
                          aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <p class="text-center h6 mt-2">attendance</p>
                    <div class="col-9">
                      <p class="text-muted mb-0">77%</p>
                      <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100"
                          aria-valuemin="0" aria-valuemax="100"></div>
                      </div>

                    </div>
                  </div>



                </div>
              </div>

            }
          </div>
        </div>
      </div>
</section>

</div>