@model CIE206PROJECT.Pages.Admin_Pages.Tables

<!-- ==========  the offcanvas head ========== -->

<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasDataoptions"
    aria-labelledby="offcanvasDataoptionsLabel">
    <div class="offcanvas-header">
        <h1 class="offcanvas-title display-6" id="offcanvasDataoptionsLabel">
            Choose Your Data</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <!-- ==================================== -->
    <!-- ==========  the offcanvas body ========== -->

    <div class="offcanvas-body">
        <div>
            <p class="lead">Please choose what data you would like displayed</p>
        </div>
        <br>

        <ul class="list-unstyled">
            <li>
                <div class="d-grid gap-2 m-3 mx-0">
                    <button type="submit" class="btn btn-outline-dark " asp-page-handler="Finance" id="Finance">
                        Finance
                        Information
                    </button>
                </div>
            </li>
            <li>
                <div class="d-grid gap-2 m-3 mx-0">
                    <button type="submit" class="btn btn-outline-dark" asp-page-handler="CourseAtt" id="CourseAtt">
                        Course Attendance
                    </button>
                </div>
            </li>
            <li>
                <div class="d-grid gap-2 m-3 mx-0">
                    <button type="submit" class="btn btn-outline-dark" asp-page-handler="InstRate" id="InstRate">
                        Instructor Ratings
                    </button>
                </div>
            </li>
            <li>
                <div class="d-grid gap-2 m-3 mx-0">
                    <button type="submit" class="btn btn-outline-dark" asp-page-handler="CourseFeedback"
                        id="CourseFeedback">
                        Course Feedback
                    </button>
                </div>
            </li>

        </ul>

    </div>
</div>
<!-- =================================== -->

<div class="container">
    <div class="row justify-content-center g-2">

        <div class="col-sm-auto d-flex align-items-stretch align-middle">

            <a class="btn btn-secondary align-self-stretch me-2 pt-4 align-text-center" data-bs-toggle="offcanvas" href="#offcanvasDataoptions"
            role="button" aria-controls="offcanvasDataoptions">
            Choose <br> data
            </a>

            <div class="btn-group-vertical" role="group" aria-label="Vertical radio toggle button group">
                <input type="radio" class="btn-check " name="options" id="option1" autocomplete="off">
                <label class="btn btn-outline-secondary" for="option1">Month 1</label>

                <input type="radio" class="btn-check " name="options" id="option2" autocomplete="off">
                <label class="btn btn-outline-secondary" for="option2">Month 2</label>

                <input type="radio" class="btn-check " name="options" id="option3" autocomplete="off">
                <label class="btn btn-outline-secondary" for="option3">Both Months</label>

            </div>

        </div>


