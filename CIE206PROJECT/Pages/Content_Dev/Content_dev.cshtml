        <div class="mt-4">
            <h3>Add Content</h3>
            <form method="post" asp-page-handler="AddContent">
                <div class="mb-3">
                    <label for="contentId" class="form-label">Content ID</label>
                    <input type="text" class="form-control" id="contentId" name="contentId" required>
                </div>
                <div class="mb-3">
                    <label for="courseId" class="form-label">Course ID</label>
                    <select class="form-control" id="courseId" name="courseId" required>
                        <option value="">Select a course</option>
                        <!-- Populate the dropdown options from the course table -->
                        @foreach (var course in Model.Courses)
                        {
                            <option value="@course.course_id">@course.course_name</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="summary" class="form-label">Summary</label>
                    <textarea class="form-control" id="summary" name="summary" rows="3" required></textarea>
                </div>
