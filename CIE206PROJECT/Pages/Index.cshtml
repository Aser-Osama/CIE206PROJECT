                                @if (!Model.isLoggedin())
                                {
                                    <form method="post" asp-page-handler="Login">

                                        <div class="mb-3">
                                            <label for="" class="form-label">Username</label>
                                            <input type="" class="form-control" placeholder="abc123" name="Email" asp-for="@Model.Email">
                                        </div>
                                        <div class="mb-3">
                                            <label for="" class="form-label">Password</label>
                                            <input type="password" class="form-control" placeholder="" name="Password" asp-for="@Model.Password">
                                        </div>

                                        <button type="submit" class="btn btn-primary" asp-page-handler="Login">Login</button>
                                    </form>
                                }
                                else
                                {
                                    <form method="post" asp-page-handler="Logout">
                                        <button type="submit" class="btn btn-danger" asp-page-handler="Logout">Logout</button>
                                    </form>
                                }



                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
