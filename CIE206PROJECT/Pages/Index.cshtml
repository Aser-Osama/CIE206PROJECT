@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="container">
    <div class="row">
        <div class="card mb-3">
            
            <div class="row g-0">

                <div class="col-md-4 d-flex align-self-center bg-primary">

                </div>
                <div class="col-md-8">
                    <div class="card-body">

                        <div class="row">
                            <div class="col">
                                <h5 class="lead">Name</h5>
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder="FirstName SecondName" aria-label="Username"
                                        aria-describedby="basic-addon1" />
                                </div>

                                <h5 class="lead">Email</h5>
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder="Email"
                                        aria-label="Recipient's username" aria-describedby="basic-addon2" />
                                    <span class="input-group-text" id="basic-addon2">@@example.com</span>
                                </div>
                                
                                <h5 class="lead">Password</h5>
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder="Email"
                                        aria-label="Recipient's username" aria-describedby="basic-addon2" />
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>